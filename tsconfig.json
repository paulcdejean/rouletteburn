{
  "include": ["NetscriptDefinitions.d.ts", "src/**/*"],
  "exclude": [".eslintc.cjs"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "importHelpers": true,
    "strict": true,
    "rootDir": "src/",
    "outDir": "dist/",
    "baseUrl": "src/",
    "allowJs": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@ns": ["../NetscriptDefinitions.d.ts"],
      "@/*": [
        "*"
      ]
    }
  }
}
