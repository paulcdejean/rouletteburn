{
  "lib": ["esnext", "DOM", "DOM.Iterable"],
  "include": [
    "NetscriptDefinitions.d.ts",
    "customd.d.ts",
    "src/**/*",
    "../pkg/rouletteburn.d.ts"
  ],
  "exclude": ["eslint.config.mjs"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "importHelpers": true,
    "strict": true,
    "rootDir": "src/",
    "baseUrl": "src/",
    "outDir": "ts",
    "allowJs": true,
    "noEmit": true,
    "jsx": "react",
    "paths": {
      "@ns": ["../NetscriptDefinitions.d.ts"],
      "@rust": ["../pkg/rouletteburn.d.ts"],
      "@/*": [
        "*"
      ]
    }
  }
}
